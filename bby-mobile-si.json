{
  "swagger": "2.0",
  "info": {
    "description": "Simple example of swagger documentation of our Mobile SI integration API",
    "version": "1.0.0",
    "title": "Best Buy Mobile Integration API",
    "termsOfService": "http://www.bestbuycanada.ca",
    "contact": {
      "url": "http://bestbuycanada.ca",
      "name": "Best Buy Canada",
      "email": "development@bestbuycanada"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "msi.bbycastatic.ca",
  "basePath": "/mobile-si/si",
  "schemes": [
    "https"
  ],
  "tags": [
    {
      "name": "search",
      "description": "Search Operations"
    },
    {
      "name": "category",
      "description": "Category Operations"
    },
    {
      "name": "product",
      "description": "Product Operations"
    },
    {
      "name": "reviews",
      "description": "Review Operations"
    },
    {
      "name": "stores",
      "description": "Store Operations"
    }
  ],
  "paths": {
    "/catalog": {
      "get": {
        "tags": [
          "category"
        ],
        "summary": "Category Tree",
        "description": "Returns live product category hierarchy and IDs",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "lang",
            "in": "query",
            "description": "The language for the categories",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "default": "en",
            "enum": ["en","fr"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/search/suggest/www": {
      "get": {
        "tags": [
          "search"
        ],
        "summary": "Search Autocomplete",
        "description": "Returns search suggestions based on provided string",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "lang",
            "in": "query",
            "description": "The language for the categories",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "default": "en",
            "enum": ["en","fr"]
          },
          {
            "name": "query",
            "in": "query",
            "description": "Search keywords",
            "required": false,
            "type": "string",
            "allowEmptyValue": true
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/v3/products/search": {
      "get": {
        "tags": [
          "search"
        ],
        "summary": "Search Results",
        "description": "Returns search results based on query",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Search query",
            "required": false,
            "type": "string",
            "allowEmptyValue": true
          },
          {
            "name": "page",
            "in": "query",
            "description": "Result page to request",
            "required": false,
            "type": "integer",
            "allowEmptyValue": false
          },
          {
            "name": "sort",
            "in": "query",
            "description": "How to sort results",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "enum": ["relevance desc"]
          },
          {
            "name": "storeId",
            "in": "query",
            "description": "[check with mobile team] Store IDs to show results for",
            "required": false,
            "type": "string",
            "allowEmptyValue": true
          },
          {
            "name": "zipCode",
            "in": "query",
            "description": "[check with mobile team] zipCode to show results for",
            "required": false,
            "type": "string",
            "allowEmptyValue": true
          },
          {
            "name": "facetsOnly",
            "in": "query",
            "description": "Show only facets as results or not",
            "required": false,
            "type": "boolean",
            "allowEmptyValue": true
          },
          {
            "name": "platform",
            "in": "query",
            "description": "[check with mobile team] Platform to format results for",
            "required": false,
            "type": "string",
            "allowEmptyValue": true,
            "enum": ["iosapp"]
          },
          {
            "name": "lang",
            "in": "query",
            "description": "The language for the categories",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "default": "en",
            "enum": ["en","fr"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/v4/pdp/overview/{productID}": {
      "get": {
        "tags": [
          "product"
        ],
        "summary": "Product Detail",
        "description": "Expects 8-digit product ID, returns detailed product information",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "productID",
            "description": "Id of product to retrieve details for",
            "required": true,
            "type": "string"
          },
          {
            "name": "lang",
            "in": "query",
            "description": "The language for the categories",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "default": "en",
            "enum": ["en","fr"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/pdp/reviewDetails/{productID}": {
      "get": {
        "tags": [
          "reviews"
        ],
        "summary": "Product Reviews",
        "description": "Returns Canadian and US product reviews",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "productID",
            "description": "Id of product to retrieve reviews for",
            "required": true,
            "type": "string"
          },
          {
            "name": "lang",
            "in": "query",
            "description": "The language for the categories",
            "required": false,
            "type": "string",
            "allowEmptyValue": false,
            "default": "en",
            "enum": ["en","fr"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/stores/{lat,long}": {
      "get": {
        "tags": [
          "stores"
        ],
        "summary": "Stores",
        "description": "Returns store locations and other useful store details",
        "operationId": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "lat,long",
            "description": "latitude and longitude of stores to locate",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    }
  }
}